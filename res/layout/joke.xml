<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="278dp"
        android:layout_height="326dp"
        android:layout_gravity="center"
        android:layout_marginBottom="59sp"
        android:src="@drawable/icon" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/joke2"
        android:orientation="vertical" >

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="223dp"
        android:layout_height="162dp"
        android:layout_gravity="right|center"
        android:layout_marginTop="35sp"
        android:src="@drawable/joke" />

    <Button
        android:id="@+id/settingBTN"
        android:onClick="setting"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="51dp"
        android:layout_height="46dp"
        android:background="@drawable/toumei_btn2"
        android:text="" />

    <Button
        android:id="@+id/button3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginTop="120sp"
        android:background="@drawable/backbtn" />

    <Button
        android:id="@+id/button1"
        android:layout_width="97dp"
        android:layout_height="92dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/gomen"
        android:freezesText="true"
        android:onClick="sorryOnClick"
        android:visibility="visible" />

    <Button
        android:id="@+id/button4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginLeft="133sp"
        android:layout_marginTop="120sp"
        android:background="@drawable/nextbtn" />

</FrameLayout>